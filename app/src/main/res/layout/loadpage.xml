<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant"
    android:orientation="horizontal"
    tools:context="com.tou.MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12.03dp"
        android:layout_marginBottom="210dp"
        android:layout_marginStart="111.12dp"
        android:text="TOU"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        />


    <ImageView
        android:layout_width="49dp"
        android:layout_height="73.33dp"
        android:layout_above="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="103.75dp"
        android:scaleType="centerInside"
        android:src="@drawable/firsticon"
        android:visibility="visible"
        app:srcCompat="@drawable/fillingicon"
        />


</RelativeLayout>
